<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:WeatherApp.Controls"
             x:Class="WeatherApp.Pages.MapPage"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             BackgroundColor="#191970">
       <Grid Margin="0,20,0,0"
                     RowDefinitions="Auto,*"
                     RowSpacing="20"
                     ColumnDefinitions="*,Auto"
                     >
              <controls:CurrentDateTimeControl Margin="15,0,0,0"/>
          <Button Grid.Column="1" Text="Get Current Weather "
              Clicked="GetWeather_Clicked"
              />
              <maps:Map Grid.Row="1"
                            Grid.ColumnSpan="2"
                            x:Name="myMap"
                        IsShowingUser="True"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand"
                        MapClicked="myMap_MapClicked"/>
       </Grid>
</ContentPage>