<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:WeatherApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="#6495ed"
    Shell.TitleColor="#191970"
    Shell.TabBarBackgroundColor="#6495ed"
    Shell.TabBarTitleColor="#191970"
    Title="WeatherApp">

   
    <TabBar
        FlyoutDisplayOptions="AsSingleItem">
        <ShellContent
            Title="Weather"
            ContentTemplate="{DataTemplate pages:WeatherInfoPage}"
            Icon="weather.png"
            Route="WeatherInfoPage"/>
        <ShellContent
            Title="Map"
            Icon="map.png"
            ContentTemplate="{DataTemplate pages:MapPage}"
            Route="MapPage"/>


    </TabBar>


</Shell>
